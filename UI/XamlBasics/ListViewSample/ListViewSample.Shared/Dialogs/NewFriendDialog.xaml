<ContentDialog
     x:Class="ListViewSample.Dialogs.NewFriendDialog"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:local="using:ListViewSample.Dialogs"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     Title="New friend"
     PrimaryButtonText="Add"
     PrimaryButtonClick="ContentDialog_PrimaryButtonClick">

 	<Grid RowSpacing="12" ColumnSpacing="12">
 		<Grid.RowDefinitions>
 			<RowDefinition/>
 			<RowDefinition/>
 			<RowDefinition/>
 			<RowDefinition/>
 		</Grid.RowDefinitions>

 		<TextBlock Grid.Row="0" Text="Name"/>
 		<TextBox HorizontalAlignment="Left" Width="400" Grid.Row="1" PlaceholderText="Enter a name" Text="{x:Bind ConnectionName, Mode=TwoWay}" />

 		<TextBlock Grid.Row="2" Text="Occupation"/>
 		<TextBox HorizontalAlignment="Left" Width="400" Grid.Row="3" PlaceholderText="Enter an occupation" Text="{x:Bind ConnectionOccupation, Mode=TwoWay}" />
 	</Grid>
 </ContentDialog>